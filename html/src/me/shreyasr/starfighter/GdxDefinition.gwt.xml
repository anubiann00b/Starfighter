<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE module PUBLIC "-//Google Inc.//DTD Google Web Toolkit trunk//EN" "http://google-web-toolkit.googlecode.com/svn/trunk/distro-source/core/src/gwt-module.dtd">
<module rename-to="html">
	<inherits name='com.badlogic.gdx.backends.gdx_backends_gwt' />
	<inherits name='com.badlogic.ashley_gwt' />
	<inherits name="com.sksamuel.gwt.GwtWebsockets" />
	<inherits name="com.google.gwt.logging.Logging"/>

	<extend-configuration-property name="gdx.reflect.include" value="com.badlogic.ashley.core.Component" />
	<extend-configuration-property name="gdx.reflect.include" value="me.shreyasr.starfighter.components" />
	<extend-configuration-property name="gdx.reflect.include" value="com.badlogic.ashley.core.Entity" />
	<extend-configuration-property name="gdx.reflect.include" value="me.shreyasr.starfighter.event" />
	<extend-configuration-property name="gdx.reflect.exclude" value="me.shreyasr.starfighter.event.EventQueue" />
	<extend-configuration-property name="gdx.reflect.exclude" value="me.shreyasr.starfighter.event.EventResolutionData" />

	<inherits name='StarfighterGame' />
	<entry-point class='me.shreyasr.starfighter.client.HtmlLauncher' />
	
	<set-configuration-property name="gdx.assetpath" value="../core/assets" />
</module>
